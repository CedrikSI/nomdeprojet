{% extends 'base.html.twig' %}

{% block title %}Liste des contacts{% endblock %}

{% block body %}
<h1 class="text center pt-2"> Fiche contact</h1>
    <div class="row">
  
            <div class="card mb-3 container">   
                    <h4 class="card-header"> {{ leContact.nom}} {{ leContact.prenom }}</h4>
                    <div class="row">                     
                        <div class="col-2 d-flex align-item-center">
                            <img class="avatar" style="height: 250px; width:100%; display:block;" src="{{leContact.avatar}}" alt="" width: 100%>*
                        </div>
                        <div class="col">    
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">Rue : {{leContact.rue}}</li>
                                    <li class="list-group-item">CP : {{leContact.cp }} </li>
                                    <li class="list-group-item">Ville : {{leContact.ville }} </li>
                                    <li class="list-group-item">Mail : {{leContact.mail }} </li>
                                    <li class="list-group-item">Sexe : 
                                    {% if leContact.sexe == 1 %}
                                        <span class="badge badge-info">Femme</span>
                                        {% else %}
                                            <span class="badge badge-info">Homme</span>
                                    {% endif %}
                                    </li>
                                </ul>
                        </div>        
                    </div>
            </div>  
            <a href ="{{path ('contacts')}}" class="btn btn-primary text-center "> Revenir a la liste</a>                
    </div>        
{% endblock %}
